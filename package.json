{
  "$schema": "https://json.schemastore.org/package",
  "name": "@mark1russell7/ts-base",
  "version": "0.0.1",
  "description": "TypeScript project configuration with hyper-strict tsconfig composition",
  "license": "MIT",
  "author": "Mark Russell <marktheprogrammer17@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ts-base": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tsconfig/*.json": "./tsconfig/*.json"
  },
  "files": [
    "dist",
    "tsconfig"
  ],
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .tsbuildinfo",
    "prepublishOnly": "npm run build"
  },
  "sideEffects": false,
  "devDependencies": {
    "@types/node": "^25.0.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.0",
    "deepmerge-ts": "^7.1.0"
  },
  "keywords": [
    "typescript",
    "tsconfig",
    "configuration",
    "strict"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mark1russell7/ts-base.git"
  },
  "bugs": {
    "url": "https://github.com/mark1russell7/ts-base/issues"
  },
  "homepage": "https://github.com/mark1russell7/ts-base#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=25.0.0",
    "npm": ">=11.0.0"
  }
}
